{
	"$schema": "https://railway.com/railway.schema.json",
	"build": {
		"builder": "RAILPACK",
		"watchPatterns": ["/apps/observer/**"],
		"buildCommand": "pnpm --filter observer build && cd packages/backend && pnpx convex deploy",
		"nixpacksPlan": {
			"phases": {
				"setup": {
					"nixPkgs": [],
					"aptPkgs": [
						"chromium",
						"ca-certificates",
						"fonts-liberation",
						"libnss3",
						"libx11-xcb1",
						"libxss1",
						"libasound2",
						"libatk1.0-0",
						"libgtk-3-0",
						"libgbm1",
						"libxcomposite1",
						"libxrandr2",
						"libxdamage1",
						"libxfixes3",
						"libxkbcommon0",
						"libxext6",
						"libxrender1",
						"libxcb1",
						"libdrm2",
						"libdbus-1-3",
						"libexpat1",
						"libpango-1.0-0",
						"libpangocairo-1.0-0",
						"libcairo2",
						"libcups2"
					]
				}
			}
		}
	}
}
